#include <iostream>

int main() {
	using namespace std;
	setlocale(0, "");
	while (true) {
		cout << "[+] Цикл WHILE" << endl;
		cout << "[+] Введите число: ";


		int a;
		int i = 0;
		cin >> a;
		if (a < 16 and a > 0) {
			while (i < a) {
				cout << "Цикл отработал. Круг: " << i + 1 << endl;
				i++;
			}
		}
		else if (a == 0) {
			cout << "Вы вышли из программы" << endl;
			break;
		}
		else {
			cout << "Ошибка" << endl;
			continue;

		}
	}
}
